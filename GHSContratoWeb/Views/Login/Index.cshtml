            </div>
            <div class="col-md-6 login-form-2" style="margin-top: 100px">
                <div class="login" style="display:none;">
                    <div class="rounded p-4 p-sm-5 my-4 mx-3" style="background-color: #3d4955;">
                        <form action="@Url.Action("Login","Login")" method="post" enctype="multipart/form-data">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <a class="">
                                    <h3 style="color: blanchedalmond">Login</h3>
                                </a>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                                <label for="floatingInput">Endereço de Email</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="senha">
                                <label for="floatingPassword">Senha</label>
                            </div>
                            <button type="submit" class="btn btn-success py-3 w-100 mb-4">Entrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sign In End -->
